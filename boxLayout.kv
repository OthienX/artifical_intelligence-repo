BoxLayout:
    orientation: 'vertical'

    MDLabel:
        id: welcome_label
        text: "Welcome"
        font_size: 40
        halign: "center"
        size_hint_y: None
        height: self.texture_size[1]
        padding_y: 15

    MDTextFieldRound:
        id: user
        hint_text: "username"
        icon_right: "account"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5}

    MDTextFieldRound:
        id: password
        hint_text: "password"
        icon_text: "password"
        icon_right: "eye_off"
        size_hint_x: None
        width: 200
        font_size: 18
        pos_hint: {"center_x": 0.5}

    MDRoundFlatButton:
        text: "Login In"
        font_size: 12
        pos_hint: {"center_x": 0.5}
        on_press: app.logger()

    MDRoundFlatButton:
        text: "Clear"
        font_size: 12
        pos_hint: {"center_x": 0.5}
        on_press: app.clear()
